<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <meta charset=" UTF-8">
        <meta name="viewport", content="width-device-width, inital-scale = 1.0 ">
        <title>Calculadora Simples</title>
    </head>
    <body>
        <script>
            function somar () {
                res.value= parseInt(v1.value)+parseInt(v2.value);
            }

            function sub () {
                res.value= parseInt(v1.value)-parseInt(v2.value);
            }

            function mult () {
                res.value= parseInt(v1.value)*parseInt(v2.value);
            }
            function div () {
                res.value= parseInt(v1.value)/parseInt(v2.value);
            }
            
        </script>

        <h1>Calculadora Simples</h1>
        Valor1: <input type="" id="v1" value="0"> </br>
        Valor2: <input type="text" id="v2" value="0"> </br>
        <input type="button" value="somar" onclick="somar()">
        <input type="button" value="subtrair" onclick="sub()">
        <input type="button" value="multiplicar" onclick="mult()">
        <input type="button" value="dividir" onclick="div()"> </br>
        Resultado: <input type="text" id="res" value="0" readonly></br>
    </body>
</html>
    
